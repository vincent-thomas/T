{
  "npmScope": "things",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "test": ["{projectRoot}/**/*.test.ts"],
    "scripts": [
      "{workspaceRoot}/scripts/**/*.sh",
      "{workspaceRoot}/scripts/*.sh"
    ],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/src/test-setup.[jt]s",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/**/*.stories.@(js|jsx|ts|tsx|mdx)",
      "!{projectRoot}/.storybook/**/*",
      "!{projectRoot}/tsconfig.storybook.json"
    ],
    "sharedGlobals": []
  },
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "."
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["prebuild"],
      "inputs": ["production", "^production", "scripts"]
    },
    "deploy": {
      "dependsOn": ["build"]
    },
    "deploy-storybook": {
      "dependsOn": ["build-storybook"]
    },
    "test": {
      "inputs": ["default", "^production", "{workspaceRoot}/jest.preset.js"]
    },
    "lint": {
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.json",
        "{workspaceRoot}/.eslintignore"
      ],
      "dependsOn": ["prelint"]
    },
    "serve": {
      "dependsOn": ["prepare"]
    },
    "check": {
      "inputs": ["production", "^production"]
    },
    "build-storybook": {
      "inputs": [
        "default",
        "^production",
        "{projectRoot}/.storybook/**/*",
        "{projectRoot}/tsconfig.storybook.json"
      ]
    },
    "e2e": {
      "inputs": ["default", "^production"]
    }
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx-cloud",
      "options": {
        "cacheableOperations": [
          "build",
          "prelint",
          "lint",
          "test",
          "check",
          "build-storybook",
          "server"
        ],
        "accessToken": "MWJlZDc5NWUtYWQwYy00OGNiLTk1NGYtMTQ2MzQ3YTJhMWUwfHJlYWQtd3JpdGU="
      }
    }
  },
  "generators": {
    "@nx/next": {
      "application": {
        "style": "none",
        "linter": "eslint"
      }
    },
    "@nx/react": {
      "library": {
        "style": "none",
        "linter": "eslint",
        "unitTestRunner": "jest"
      },
      "application": {
        "style": "none",
        "linter": "eslint",
        "bundler": "vite"
      },
      "component": {
        "style": "none"
      }
    }
  }
}
