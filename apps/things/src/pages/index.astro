---
import Layout from '../layouts/Layout.astro';
import {Navbar} from "../components/navbar"
import { Button } from '@things/ui';
---



<Layout title="thingsSuite | Home">
  <Navbar />
	<main>
    <div class="py-72 w-full">
      <section class="flex flex-col 2xl:flex-row text-center 2xl:text-left justify-between px-6">
        <div class="mt-4 flex flex-col justify-start gap-4">
          <h1 class="font-semibold sm:text-7xl text-5xl">
            Designed to get <span role="button" onclick='testing()' class="text-primary-accent line relative 2xl:hover:text-primary-foreground  hover:z-50"><Button asChild>things</Button></span> done
          </h1>
          <span class="2xl:ml-1 text-lg">But what are <span class="font-semibold text-primary-accent">things</span>? I'm not done with it :(</span>
        </div>
      </section>
    </div>
    <div class="h-[100vh]"></div>
    <div id="to-scroll"></div>
    <div class="h-[200vh]"></div>
	</main>
</Layout>
<script is:inline>
    var scrollDiv = document.getElementById("to-scroll").offsetTop;

  function testing(){
  window.scrollTo({ top: scrollDiv, behavior: 'smooth'});
  }


</script>

<style>

  /* .line::before {
    content: "Hover over me";
    @apply absolute text-primary-muted text-base font-normal;
    transform: translate(120px, -20px) rotate(5deg);

  } */

  .line::after {
    content: "";
    transition: all 0.3s ease;
    @apply bg-primary-ghost absolute h-[5px] w-full left-0 bottom-[5px] ;
  }
  .line:hover::after {
      @apply  2xl:bg-primary 2xl:left-[-10px] 2xl:bottom-[-10px] 2xl:-z-10 2xl:h-[100px] 2xl:w-[calc(100%+20px)];
  }
</style>
