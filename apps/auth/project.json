{
  "name": "auth",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/auth",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/auth"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/auth"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "auth:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "auth:build:development",
          "dev": true,
          "hostname": "auth.localhost"
        },
        "production": {
          "buildTarget": "auth:build:production",
          "dev": false
        }
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "inputs": ["test"],
      "options": {
        "command": "vitest run",
        "cwd": "./apps/auth"
      },
      "configurations": {
        "coverage": {
          "command": "vitest run --coverage"
        },
        "ui": {
          "command": "vitest --ui"
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/auth/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "drizzle": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "generate",
      "configurations": {
        "push": {
          "command": "pnpm drizzle-kit push:mysql --config=./apps/auth/drizzle.config.ts"
        },
        "generate": {
          "command": "pnpm drizzle-kit generate:mysql --config=./apps/auth/drizzle.config.ts"
        },
        "drop": {
          "command": "pnpm drizzle-kit drop --config=./apps/auth/drizzle.config.ts"
        },
        "studio": {
          "command": "pnpm drizzle-kit studio --config=./apps/auth/drizzle.config.ts"
        }
      }
    }
  },
  "tags": ["runtime:node", "runtime:browser"]
}
