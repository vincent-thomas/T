{
  "name": "@things/api",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "outputs": [".things/things-api"]
      },
      "build:docker": {
        "dependsOn": ["build"],
        "inputs": ["{projectRoot}/Dockerfile"]
      }
    }
  },
  "scripts": {
    "db:push": "drizzle-kit push:mysql",
    "db:studio": "drizzle-kit studio",
    "e2e": "tsc -p tsconfig.e2e.json && jest",
    "serve": "tsx watch ./src/main.ts --tsconfig ./tsconfig.app.json",
    "build": "tsc -p tsconfig.app.json && tsup src/main.ts",
    "build:docker": "docker build -f ./Dockerfile ../../ -t things-api:latest"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.362.0",
    "@aws-sdk/signature-v4-crt": "^3.354.0",
    "@node-rs/argon2": "^1.5.2",
    "@swc/helpers": "~0.5.0",
    "@things/crypto": "workspace:*",
    "@things/format": "workspace:*",
    "axios": "^1.4.0",
    "cookie-parser": "^1.4.6",
    "cors": "~2.8.5",
    "dotenv": "16.3.1",
    "drizzle-orm": "^0.28.5",
    "express": "~4.18.2",
    "express-rate-limit": "^6.8.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "mysql2": "^3.5.2",
    "qs": "^6.11.2",
    "rate-limit-redis": "^3.0.2",
    "redis": "^4.6.7",
    "tslib": "^2.3.0",
    "uid": "^2.0.2",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/qs": "^6.9.7",
    "@types/supertest": "^2.0.12",
    "drizzle-kit": "^0.19.13",
    "fork-ts-checker-webpack-plugin": "^8.0.0",
    "jest": "^29.4.1",
    "supertest": "^6.3.3",
    "ts-loader": "^9.4.4",
    "ts-node": "10.9.1",
    "tsup": "^7.2.0",
    "tsx": "^3.12.8"
  }
}
