{
  "name": "crypto",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/crypto/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/crypto",
        "tsConfig": "libs/crypto/tsconfig.lib.json",
        "packageJson": "libs/crypto/package.json",
        "main": "libs/crypto/src/index.ts",
        "assets": ["libs/crypto/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs cryptography {args.ver} {args.tag}",
      "dependsOn": ["build"],
      "options": {
        "ver": "0.0.1",
        "tags": "latest"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/crypto/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/crypto/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": ["runtime:node"]
}
