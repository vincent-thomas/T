{
  "name": "things-cli",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "./cli/src",
  "targets": {
    "build": {
      "command": "cargo build --target-dir dist/target/cli -p things",
      "outputs": ["{options.target-dir}"],
      "options": {
        "target-dir": "dist/target/cli"
      }
    },
    "test": {
      "command": "cargo test --target-dir dist/target/cli -p things --color always",
      "outputs": ["{options.target-dir}"]
    },
    "lint": {
      "command": "cargo clippy --target-dir dist/target/cli -p things",
      "outputs": ["dist/target/cli"]
    },
    "serve": {
      "outputs": ["dist/target/cli"],
      "command": "cargo run things"
    }
  },
  "tags": []
}
