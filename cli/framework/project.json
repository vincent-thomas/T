{
  "name": "things-framework",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "./cli/framework/src",
  "tags": ["scope:things-cli", "type:lib", "runtime:rust"],
  "targets": {
    "build": {
      "command": "cargo build --target-dir dist/cli/framework -p framework",
      "outputs": ["dist/cli/framework"],
    },
    "test": {
      "command": "cargo test --target-dir dist/cli/framework -p framework --color always",
      "outputs": ["{options.target-dir}"]
    },
    "lint": {
      "command": "cargo clippy --target-dir dist/cli/framework -p framework",
      "outputs": ["dist/cli/framework"]
    },
    "serve": {
      "outputs": ["dist/cli/framework"],
      "command": "cargo run things"
    }
  },
}
