{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "strict": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2017",
    "module": "esnext",
    "esModuleInterop": true,
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "@api/app": ["api/api/*"],
      "@api/auth": ["api/auth/src/index.ts"],
      "@api/data": ["api/data/src/index.ts"],
      "@api/drive": ["api/drive/src/index.ts"],
      "@api/env": ["api/env/src/index.ts"],
      "@api/shared": ["api/shared/src/index.ts"],
      "@auth/*": ["apps/auth/*"],
      "@things/build-config/*": ["libs/build-config/src/*"],
      "@things/crypto": ["libs/crypto/src/index.ts"],
      "@things/drive-queries": ["libs/drive-queries/src/index.ts"],
      "@things/express-func": ["libs/express-func/src/index.ts"],
      "@things/format": ["libs/format/src/index.ts"],
      "@things/logger": ["libs/logger/src/index.ts"],
      "@things/ui": ["libs/ui/src/internal.ts"],
      "@things/ui/styles": ["libs/ui/src/styles/local.css"]
    }
  },
  "exclude": ["node_modules", "tmp", "dist", "cli"]
}
