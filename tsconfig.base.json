{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "strict": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2017",
    "module": "esnext",
    "esModuleInterop": true,
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "@things/drive-queries": ["libs/drive-queries/src/index.ts"],
      "@things/express-func": ["libs/express-func/src/index.ts"],
      "@things/logger": ["libs/logger/src/index.ts"],
      "@things/ui": ["libs/ui/src/internal.ts"],
      "@things/ui/styles": ["libs/ui/src/styles/local.css"]
    }
  },
  "exclude": ["node_modules", "tmp", "dist", "cli"]
}
